{#
/**
 * @file
 * Default theme implementation for a branding block.
 *
 * Each branding element variable (logo, name, slogan) is only available if
 * enabled in the block configuration.
 *
 * Available variables:
 * - site_logo: Logo for site as defined in Appearance or theme settings.
 * - site_name: Name for site as defined in Site information settings.
 * - site_slogan: Slogan for site as defined in Site information settings.
 *
 * @ingroup themeable
 */
#}
{% if configuration.block_style.type == 'horizontal' %}
  {{ attach_library('camaleon/branding_horizontal') }}
{% endif %}

{% if configuration.block_style.type == 'horizontal_inverted' %}
  {{ attach_library('camaleon/branding_horizontal_inverted') }}
{% endif %}

{% if configuration.block_style.type == 'vertical' %}
  {{ attach_library('camaleon/branding_vertical') }}
{% endif %}

{% if configuration.block_style.type == 'vertical_inverted' %}
  {{ attach_library('camaleon/branding_vertical_inverted') }}
{% endif %}

{% if configuration.block_style.name_font_family != 'default' %}
  {{ attach_library('camaleon/' ~ configuration.block_style.name_font_family) }}
{% endif %}

{% if configuration.block_style.slogan_font_family != 'default' %}
  {{ attach_library('camaleon/' ~ configuration.block_style.slogan_font_family) }}
{% endif %}

{% if configuration.block_style.animation_option == TRUE %}
  {{ attach_library('camaleon/' ~ configuration.block_style.animation_type) }}
{% endif %}

{% include "@Components/branding/siteBranding.twig" with {
  'site_logo': site_logo,
  'site_name': site_name,
  'site_slogan': site_slogan,
  'theme_settings': theme_settings,
  'configuration': configuration,
  }
%}
