    styles.button_link_color_select == 'customColor' ? '--buttonLinkColor: ' ~ styles.button_link_color_custom,
    styles.button_secondary_color_select != 'default' and styles.button_secondary_color_select != 'customColor' ? '--buttonSecondaryColor: var(--' ~ styles.button_secondary_color_select ~ ')',
    styles.button_secondary_color_select == 'customColor' ? '--buttonSecondaryColor: ' ~ styles.button_secondary_color_custom,
    styles.button_secondary_link_color_select != 'default' and styles.button_secondary_link_color_select != 'customColor' ? '--buttonSecondaryLinkColor: var(--' ~ styles.button_secondary_link_color_select ~ ')',
    styles.button_secondary_link_color_select == 'customColor' ? '--buttonSecondaryLinkColor: ' ~ styles.button_secondary_link_color_custom,

