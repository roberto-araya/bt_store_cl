    styles.xxl_text_align != 'default' ? '--xxlTextAlign: ' ~ styles.xxl_text_align : '',
  ])|remove_empty
%}

{%
  set classes = [
    'block',
    'block' ~ bundle|capitalize,
    'block' ~ bundle|capitalize ~ '--' ~ view_mode,
  ]|remove_empty
%}

{% set boxed_attributes = create_attribute() %}
{%
  set boxed_classes = [
    'boxed',
    styles.animation_option == TRUE and styles.animation_trigger == 'on_scroll' ? 'wow' : '',
    styles.animation_option == TRUE ? styles.animation_type : '',
  ]|remove_empty
%}


{%
  set title_classes = [
    configuration.label_display == FALSE ? 'visually-hidden',
    'block' ~ bundle|capitalize ~ '--' ~ view_mode ~ '__block-title',
  ]
%}

<section {{ attributes.setAttribute('style', styles_vars|join('; ')).setAttribute('id', 'blockHero--' ~ id ).addClass(classes) }}>
  {{title_prefix }}
  <h3{{ title_attributes.addClass(title_classes) }}>{{ label }}</h3>
  {{ title_suffix }}
  <div{{ boxed_attributes.setAttribute('class', boxed_classes) }}>
  {% block content %}
    {#{{ content.field_bt_img }}#}
    {{ content.field_bt_content_title }}
    {{ content.field_bt_epigrafe }}
    {{ content.field_bt_paragraph }}
    {% if content.field_bt_link_double is not empty %}
      <div class="blockHero__buttons blockHero--full__buttons">
        {% if content.field_bt_link_double.0 is not empty %}
            <div class="btn btn-lg blockHero__button blockHero--full__button">
              {{ content.field_bt_button_icon }}  
              <div class="btn-link blockHero__link blockHero--full__link">
                {{ content.field_bt_link_double.0 }}
              </div>  
            </div>
        {% endif %}
        {% if content.field_bt_link_double.1 is not empty %}
            <div class="btn btn-lg blockHero__button-secondary blockHero--full__button-secondary">
              {{ content.field_bt_button_secondary_icon }}  
              <div class="btn-link blockHero__link blockHero--full__link">
                {{ content.field_bt_link_double.1 }}
              </div>
            </div>
        {% endif %}
      </div>
      {% endif %}
  {% endblock %}
  </div>
</section>